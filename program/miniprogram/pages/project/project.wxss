/* pages/project/project.wxss */

button {
  margin: 0;
  padding: 0;
  height: 50rpx;
  line-height: 50rpx;
}

/* 标语 */

.project-title {
  color: #7dc5eb;
  text-align: center;
  margin: 30rpx 0;
}

/* 用法-单位-编辑-保存 */

.project-info {
  display: flex;
  justify-content: space-between;
  text-align: center;
  margin: 0 20rpx;
  color: #7dc5eb;
}

.project-info image {
  height: 50rpx;
  width: 50rpx;
}

/* 项目列表 */

.project-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 30rpx;
}
/* 操作图标 */
.project-item image {
  height: 50rpx;
  width: 50rpx;
}

.project-item {
  width: 300rpx;
  margin: 50rpx 0;
  display: flex;
  align-items: center;
  flex-direction: column;
  color: #7dc5eb;
}

/* 每个项目的圈。和圈里的东西 */
.project-item-circle {
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
  position: relative;
}

/* 颜色:0灰,1红,2橙,>3绿 */
.project-item-circle-0{
border: 10px solid #dcdcdc;
color: #dcdcdc;
}
.project-item-circle-1{
border: 10px solid #ff7575;
color: #ff7575;
}
.project-item-circle-2{
border: 10px solid #ffaa70;
color: #ffaa70;
}
.project-item-circle-3{
border: 10px solid #8ce49b;
color: #8ce49b;
}

.project-item-count {
  font-size: 60rpx;
  position: absolute;
  transform: translate(-50%, -50%);
  top: 50%;
  left: 50%;
}

.project-item-button {
  display: flex;
  justify-content: space-between;
}

/* 新增项目 */
.project-add {
  height: 200rpx;
  width: 200rpx;
  border: 8px dotted #dcdcdc;
  border-radius: 50%;
  font-size: 200rpx;
  line-height: 170rpx;
  text-align: center;
  color: #dcdcdc;
}
